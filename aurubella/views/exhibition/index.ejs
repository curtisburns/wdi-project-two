<section class="section">
  <div class="container">
    <div class="columns is-multiline is-mobile">
      <% images.forEach(image => { %>
        <div class="column is-4-desktop column is-4-tablet is-full-mobile">
          <h2 class="is-subtitle"> <%= image.uploadedBy.username %> </h2>
          <a href="/exhibition/<%= image.id %>" >
            <img src="images/<%= image.imageURL %>" alt="<%= image.caption %>">
            <h3 class="is-subtitle is-4"> <%= image.caption %> </h3>
            <% image.tags.forEach(tag => { %>
              <a class="tag" href="#"> <%= tag %> </a>
            <% }) %>
            <% image.comments.forEach(comment => { %>
              <h3 class="is-subtitle is-4"> <%= comment.name %>: <%= comment.content %> </h3>
            <% }) %>
          </a>
        </div>
        <% }) %>
      </div>

  </div>

</section>
